html, body
  font-family: 'Lato', 'Helvetica', 'Arial', sans-serif !default
  font-size: 16px

a
  color: #21bdc4
  &:hover
    color: lightness(#21bdc4, 35%) !important

li
  padding-bottom: 0.3em

.ui.top.menu,
.ui.bottom.menu
  background-color: #2b3946
  margin: 0
  overflow-x: hidden
  .item
    color: white

.pusher
  min-height: 100%
  position: relative

.ui.top.menu
  .item
    height: 64px
    @media only screen and (max-width: 991px)
      height: 56px
    a
      color: white
  .logo-item
    >a:not(.ui)
      line-height: 1
      padding-top: 2px
    @media only screen and (max-width: 767px)
      margin: 0 auto;
  .logo
    height: 37px
    @media only screen and (max-width: 991px)
      height: 33px
    @media only screen and (max-width: 767px)
      margin-left: -72px
  .menu>.ui.icon.input>i.circular.icon
    top: .24em
    right: .24em
  &+.ui.grid
    margin-top: 0
    padding-top: 78px
    padding-top: calc(64px + 1rem)
    padding-bottom: 45px
    @media only screen and (max-width: 991px)
      padding-top: 70px
      padding-top: calc(56px + 1rem)

.ui.bottom.menu
  position: absolute
  width: 100%
  height: 45px
  bottom: 0
  .icon
    color: white
    font-size: 1.2em
    width: 30px

.ui.grid.menu>.column:not(.row),
.ui.grid.menu>.row>.column
  width: auto

.ui.vertical.divider.connected
  &:before,
  &:after
    height: 100%

.ui.menu
  .item.share
    >.icon
      font-size: 1.5rem
      margin: 0
      @media only screen and (max-width: 767px)
        margin: -10px
    &:hover
      >.icon
        color: white
      &.twitter
        background-color: #00aced
      &.facebook
        background-color: #3b5998
      &.pinterest
        background-color: #cb2027
      &.google
        background-color: #dd4b39

.article-date
  padding-bottom: 5px

#more
  display: block
  position: relative
  top: -64px
  visibility: hidden

.video-container
  position: relative
  padding-top: (9 / 16 * 100)% // 16:9 ratio
  height: 0
  overflow: hidden
  margin: 0 0 .5em
  iframe, object, embed
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    margin-top: 0
